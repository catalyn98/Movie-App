<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_movie"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_movie_name_year"
        android:layout_width="250sp"
        android:layout_height="31sp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"
        android:fontFamily="@font/coiny"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_movie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Movie name and year Movie name and year" />

    <TextView
        android:id="@+id/tv_describe_movie"
        android:layout_width="250dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"
        android:fontFamily="@font/coiny"
        android:textColor="@color/ic_launcher_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_movie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        tools:text="Describe movies" />

    <Button
        android:id="@+id/button_add_watched"
        android:layout_width="106dp"
        android:layout_height="46dp"
        android:background="#FF0000"
        android:text="Add watched"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:fontFamily="@font/bungee_inline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toEndOf="@+id/iv_movie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/button_add_favorite"
        android:layout_width="106dp"
        android:layout_height="46dp"
        android:layout_marginRight="28dp"
        android:background="#FF0000"
        android:fontFamily="@font/bungee_inline"
        android:text="Add favorite"
        android:textColor="#FDFCFC"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />
</androidx.constraintlayout.widget.ConstraintLayout>